# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
DATABASE_URL=sqlite:///cyberquest.db
SUPABASE_URL=your-supabase-project-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SECRET_KEY=your-secret-key-here

# Development Settings
DEBUG=True

# Email Configuration (Required for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
SERVER_NAME=localhost:5000
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

# Application Settings
POSTS_PER_PAGE=10
UPLOAD_FOLDER=app/static/uploads

# Session Configuration
PERMANENT_SESSION_LIFETIME=2592000

# Login Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Vercel Deployment (automatically set by Vercel)
# VERCEL=1

# Production Settings (for traditional hosting)
# Set these for production deployment on platforms other than Vercel
# SECRET_KEY=your-production-secret-key-here

# AI & Gamification
AI_MENTOR_API_KEY=your-ai-api-key
ADAPTIVE_DIFFICULTY_ENABLED=true
XP_MULTIPLIER=1.0

# Community Features
FORUMS_ENABLED=true
TOURNAMENTS_ENABLED=true
LEADERBOARDS_PUBLIC=true